<?xml version="1.0" encoding="UTF-8" ?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    <!-- TODO @Jerome   -->
    <xsd:element name="Menu">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="Category" maxOccurs="unbounded">
          <xsd:complexType>
            <xsd:sequence>
              <xsd:element name="Dish" maxOccurs="unbounded">
                <xsd:complexType>
                  <xsd:sequence>
                    <xsd:element name="name" type="xs:string"/>
                    <xsd:element name="description" type="xs:string" minOccurs="0"/>
                    <xsd:element name="price" type="xs:nonNegativeInteger"/>
                    <xsd:element name="image" type="xs:string" minOccurs="0"/>
                  </xsd:sequence>
                </xsd:complexType>
              </xsd:element>
            </xsd:sequence>
            <xsd:attribute name="name" type="xs:string"/>
            <xsd:attribute name="exist" type="xs:boolean"/>
          </xsd:complexType>
        </xsd:element>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

</xsd:schema>
